*{
	box-sizing: border-box;
}

body {
	margin: 0;
	font-family: Futura, Arial, sans-serif;
}

section {
	width: 100%;
	padding: 0 10%;
	display: table;
	margin: 0;
	max-width: none;
	background: #e74c3c;
	height: 100vh;

}

.first{
	height: 100vh;
	background: #ecf0f1;
}

.content {
	display: table-cell;
	vertical-align: middle;

}

h1{
	font-size: 70px;
	color: #e74c3c;
}

h1 a{
	font-size: 70px;
	color: #e74c3c;
	text-decoration: none;
}

#menu a{
	font-size: 30px;
	color: #34495e;
}

h2 {
	font-size: 30px;
	color: #34495e;
}

h3 {
	font-size: 25px;
	color: #e74c3c;
}

p {
	font-size: 20px;
	color: #34495e;
}

li {
	color: #34495e;
}

a {
	color: #e74c3c;
}

img {
	width: 300px;
	height: auto;
}
